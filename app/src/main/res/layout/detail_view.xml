<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="290dp"
            android:src="@drawable/placeholder"
            android:scaleType="centerCrop"
            android:id="@+id/img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Petits pois et carrotes"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:id="@+id/product_title"
            app:layout_constraintTop_toBottomOf="@id/img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"

    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cassegrain"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/product_title"
            app:layout_constraintLeft_toLeftOf="@id/product_title"
            android:id="@+id/marque"
    />
    <ImageView
            android:layout_width="78dp"
            android:layout_height="42dp"
            android:src="@drawable/nutri_score_e"
            android:scaleType="centerCrop"
            android:layout_marginRight="25dp"
            app:layout_constraintTop_toBottomOf="@id/img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/product_title"
            android:id="@+id/image_nutriScore"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code barres : "
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="25dp"
            android:id="@+id/codeBar"
            app:layout_constraintTop_toBottomOf="@id/marque"
            app:layout_constraintStart_toStartOf="@id/marque"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400g (280 g net egoutté)"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:id="@+id/quantite"
            app:layout_constraintTop_toBottomOf="@id/codeBar"
            app:layout_constraintStart_toStartOf="@id/codeBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendu en : France, Japon, Suisse"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:id="@+id/lieu"
            app:layout_constraintTop_toBottomOf="@id/quantite"
            app:layout_constraintStart_toStartOf="@id/quantite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrédients : Petits pois 66%, eau, garniture 2,8%"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="25dp"
            android:id="@+id/ingredients"
            app:layout_constraintTop_toBottomOf="@id/lieu"
            app:layout_constraintStart_toStartOf="@id/lieu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
    />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>